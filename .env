# ──────────── DATABASE (Postgres) ────────────
# these tell Postgres (in Docker) which user/db to bootstrap
POSTGRES_USER=finance_user
POSTGRES_PASSWORD=finance_pass
POSTGRES_DB=finance_db

# ──────────── SPRING BOOT (backend) ────────────
# these point your app at the Postgres container named “db”
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/finance_db
SPRING_DATASOURCE_USERNAME=finance_user
SPRING_DATASOURCE_PASSWORD=finance_pass
# a random key to sign your JWTs—generate one, e.g. `openssl rand -hex 32`
JWT_SECRET=a_super_secret_key_you_make_up

# ──────────── CAP1 API (sandbox) ────────────
# ⚠️ replace these two with your real sandbox credentials ⚠️
CAP1_CLIENT_ID=your_sandbox_client_id_here
CAP1_CLIENT_SECRET=your_sandbox_client_secret_here
CAP1_ENVIRONMENT=sandbox

# ──────────── FRONTEND (Vite React) ────────────
# this tells your React app where to send API calls
VITE_API_BASE_URL=http://localhost:8080/api
